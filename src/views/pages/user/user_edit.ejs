<main class="main">
    <main class="container">

        <section class="wrapper">
            <section class="wrapper__header">
                <div>
                    <h2 class="wrapper__title">Editar Usuario</h2>
                    <p class="wrapper__desc">Modifique los datos necesarios</p>
                </div>
            </section>
            <section class="wrapper__body">
                <form class="wrapper__group" action="/user/<%= user.id %>/edit?_method=PUT" method="POST" id="form">
                    <section class="wrapper__row wrapper__row--2">
                        <div class="item">
                            <label for="user_name" class="label">Nombre</label>
                            <input type="text" name="user_name" id="user_name" class="input-text" value="<%= user.name %>">
                        </div>
                        <div class="item">
                            <label for="user_lastname" class="label">Apellido</label>
                            <input type="text" name="user_lastname" id="user_lastname" class="input-text" value="<%= user.lastname %>">
                        </div>
                    </section>
                    <div class="item">
                        <label for="user_dni" class="label">DNI</label>
                        <input type="number" name="user_dni" id="user_dni" class="input-text" value="<%= user.dni %>">
                    </div>
                    <div class="item">
                        <label for="user_email" class="label">Correo</label>
                        <input type="email" name="user_email" id="user_email" class="input-text" value="<%= user.email %>">
                    </div>

                    <div class="wrapper__group">
                        <label for="role" class="label">Seleccione un rol</label>
                        <div class="item">
                            <% roles.forEach((role)=> {%>
                                <label class="label--checkbox" for="<%= role.role_id%>">
                                    <input type="radio" name="role_id" id="<%= role.role_id%>" value="<%= role.role_id%>" <% if (role.role_id == user.role.role_id) {%> checked <%}%> >
                                    <%= role.role_code%> - <%= role.role_name %>
                                </label>
                            <%})%>
                        </div>
                    </div>
                    <div class="wrapper__item wrapper__item--inline">
                        <a href="/user/<%= user.id %>" class="btn btn--gray">Cancelar</a>
                        <button class="btn" type="submit">Aceptar</button>
                    </div>
                </form>
            </section>
        </section>
    </main>
</main>