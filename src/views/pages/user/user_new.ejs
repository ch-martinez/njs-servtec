<main class="main">
    <main class="container">

        <section class="wrapper">
            <section class="wrapper__header">
                <div>
                    <h2 class="wrapper__title">Nuevo Usuario</h2>
                    <p class="wrapper__desc">Complete los datos requeridos</p>
                </div>
            </section>
            <section class="wrapper__body">
                <form class="wrapper__group" action="">
                    <div class="item">
                        <label for="user_name" class="label">Nombre</label>
                        <input type="text" name="user_name" id="user_name" class="input-text">
                    </div>
                    <div class="item">
                        <label for="user_lastname" class="label">Apellido</label>
                        <input type="text" name="user_lastname" id="user_lastname" class="input-text">
                    </div>
                    <div class="item">
                        <label for="user_dni" class="label">DNI</label>
                        <input type="number" name="user_dni" id="user_dni" class="input-text">
                    </div>
                    <div class="item">
                        <label for="user_email" class="label">Correo</label>
                        <input type="email" name="user_email" id="user_email" class="input-text">
                    </div>
                    <div class="item">
                        <label for="user_email" class="label">Correo</label>
                        <input type="email" name="user_email" id="user_email" class="input-text">
                    </div>
                    <div class="item">
                        <label for="user_password" class="label">Contraseña</label>
                        <input type="password" name="user_password" id="user_password" class="input-text">
                    </div>
                    <div class="item">
                        <label for="user_password_repeat" class="label">Repetir contraseña</label>
                        <input type="password" name="user_password_repeat" id="user_password_repeat" class="input-text">
                    </div>
                    <div class="wrapper__group">
                        <label for="role" class="label">Seleccione un rol</label>
                        <div class="item">
                            <% roles.forEach((role)=> {%>
                                <label class="label--checkbox" for="<%= role.id%>">
                                    <input type="radio" name="role_code" id="<%= role.id%>">
                                    <%= role.code%> - <%= role.name %>
                                </label>
                                <%})%>
                        </div>
                    </div>
                    <div class="wrapper__item wrapper__item--inline">
                        <a href="/user/all" class="btn btn--gray">Cancelar</a>
                        <button class="btn" type="submit">Aceptar</button>
                    </div>
                </form>
            </section>
        </section>
    </main>
</main>