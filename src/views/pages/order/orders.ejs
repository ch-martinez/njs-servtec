<main class="main">
    <section class="wrapper">
        <section class="wrapper__header">
            <div>
                <h2 class="wrapper__title">Recepción</h2>
                <p class="wrapper__desc">Ordenes pendientes de recepción en taller</p>
            </div>
        </section>

        <section class="wrapper__body">
            <table id="table-main" class="table">
                <thead class="table__head">
                    <tr class="table__row-head">
                        <th class="table__cell table__cell--fit"></th>
                        <th class="table__cell">N° orden</th>
                        <th class="table__cell">Falla</th>
                        <th class="table__cell">Creación</th>
                    </tr>
                </thead>
                <tbody class="table__body">
                    <% orders.forEach((order)=> { %>
                        <tr class="table__row">
                            <td class="table__cell">
                                <input type="checkbox" name="" id="">
                            </td>
                            <td class="table__cell">
                                <a href="/order/<%= order.id %>" class="link link--table">
                                    <%= order.ticket %>
                                </a>
                            </td>
                            <td class="table__cell">

                            </td>
                            <td class="table__cell">
                                <%= order.created_at %>
                            </td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>
        </section>
    </section>
    <section class="wrapper">
        <section class="wrapper__header">
            <div>
                <h2 class="wrapper__title">Ordenes</h2>
                <p class="wrapper__desc">Listado de todas las ordenes de reparación</p>
            </div>

            <div class="wrapper__header-buttons-container">
                <a href="/order/new" class="btn">
                    <iconify-icon icon="tabler:circle-plus"></iconify-icon>
                    <span>Nueva orden</span>
                </a>
            </div>
        </section>

        <section class="wrapper__body">
            <table id="table-main" class="table">
                <thead class="table__head">
                    <tr class="table__row-head">
                        <th class="table__cell">ID</th>
                        <th class="table__cell">N° orden</th>
                        <th class="table__cell">Cliente</th>
                        <th class="table__cell">Estado actual</th>
                        <th class="table__cell">Creación</th>
                        <th class="table__cell table__cell--fit"></th>
                    </tr>
                </thead>
                <tbody class="table__body">
                    <% orders.forEach((order)=> { %>
                        <tr class="table__row">
                            <td class="table__cell">
                                <a href="/order/<%= order.id %>" class="link link--table">
                                    <%= order.id %>
                                </a>
                            </td>
                            <td class="table__cell">
                                <%= order.ticket %>
                            </td>
                            <td class="table__cell">
                                <a href="/customer/<%= order.customer_id %>" class="link link--table">
                                    <%= order.customer_name %> <%= order.customer_lastname %>
                                </a>
                            </td>
                            <td class="table__cell">
                                <%= order.status %>
                            </td>
                            <td class="table__cell">
                                <%= order.created_at %>
                            </td>
                            <td class="table__cell table__cell--fit">
                                <a href="/order/<%= order.order_id %>/edit" class="btn-table"><iconify-icon icon="tabler:edit"></iconify-icon></a>
                            </td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>
        </section>
    </section>
</main>