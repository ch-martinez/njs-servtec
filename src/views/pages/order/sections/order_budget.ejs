<main class="main">
    <main class="container container--box">

        <section class="wrapper">
            <section class="wrapper__header">
                <div>
                    <h2 class="wrapper__title">Presupuesto</h2>
                    <p class="wrapper__desc">Indique el presupuesto realizado junto a su detalle</p>
                </div>
            </section>
            <section class="wrapper__body">
                <form class="wrapper__group wrapper__group--box" action="/order/<%= oid %>/budget" method="POST" id="form">
                    <input type="hidden" name="next_status" value="<%= next_status %>">
                    <div class="item">
                        <label for="order_budget" class="label">Costo</label>
                        <input type="number" name="order_budget" id="order_budget" class="input" required>
                    </div>
                    <div class="item">
                        <label for="order_budget_detail" class="label">Detalle presupuesto</label>
                        <textarea name="order_budget_detail" id="order_budget_detail" class="input input--textarea" rows="3" required></textarea>
                    </div>

                    <div class="wrapper__item wrapper__item--inline">
                        <a href="/order/<%= oid %>" class="btn btn--gray btn--full">Cancelar</a>
                        <button class="btn btn--full" type="submit">Aceptar</button>
                    </div>
                </form>
            </section>
        </section>
    </main>
</main>