<main class="main">
    <main class="container container--box">

        <section class="wrapper">
            <section class="wrapper__header">
                <div>
                    <h2 class="wrapper__title"><%= d.text.wrapper_title %></h2>
                    <p class="wrapper__desc"></p>
                </div>
            </section>
            <section class="wrapper__body">
                <% if (d.t) {%>
                    <form class="wrapper__group wrapper__group--box" action="/order/<%= d.order_id %>/comment?t=<%= d.t %>" method="POST" id="form">
                    <input type="hidden" name="type" value="<%= d.t %>">
                <% } else {%>
                    <form class="wrapper__group wrapper__group--box" action="/order/<%= d.order_id %>/comment" method="POST" id="form">
                    <input type="hidden" name="next_status" value="<%= d.next_status_id %>">
                <%} %>
                    <div class="item">
                        <label for="order_comment" class="label"><%= d.text.textarea_title %>:</label>
                        <label for="order_comment" class="label"><%= d.type %>:</label>
                        <textarea name="order_comment" id="order_comment" class="input input--textarea" rows="10" required>
                            <%= comments.comment_tec %>
                        </textarea>
                    </div>

                    <div class="wrapper__item wrapper__item--inline">
                        <a href="/order/<%= d.order_id %>" class="btn btn--gray btn--full">Cancelar</a>
                        <button class="btn btn--full" type="submit">Aceptar</button>
                    </div>
                </form>
            </section>
        </section>
    </main>
</main>