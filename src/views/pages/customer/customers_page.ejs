<section class="main__body main--wrapper">

    <section class="wrapper">
        <section class="wrapper__header">
            <div>
                <h2 class="wrapper__title">Clientes</h2>
                <p class="wrapper__desc">Listado de todos los clientes</p>
            </div>

            <div class="wrapper__header-buttons-container">
                <a href="/customer/new" class="btn">
                    <iconify-icon icon="tabler:circle-plus"></iconify-icon>
                    <span>Nuevo cliente</span>
                </a>
            </div>
        </section>

        <section class="wrapper__body">
            <table id="table-main" class="table">
                <thead class="table__head">
                    <tr class="table__row-head">
                        <th class="table__cell">DNI</th>
                        <th class="table__cell">Nombre y apellido</th>
                        <th class="table__cell">Correo</th>
                        <th class="table__cell">Telefono</th>
                        <th class="table__cell table__cell--fit">Estado</th>
                        <th class="table__cell table__cell--fit"></th>
                    </tr>
                </thead>
                <tbody class="table__body">
                    <% customers.forEach((customer)=> { %>
                        <tr class="table__row">
                            <td class="table__cell">
                                <%= customer.dni %>
                            </td>
                            <td class="table__cell">
                                <a href="/customer/<%= customer.id %>" class="link link--table">
                                    <%= customer.name %> <%= customer.lastname %>
                                </a>
                            </td>
                            <td class="table__cell">
                                <%= customer.email %>
                            </td>
                            <td class="table__cell">
                                <%= customer.tel %>
                            </td>
                            <td class="table__cell table__cell--fit">
                                <% if (customer.disabled==0) { %>
                                    <span class="badge badge--green">activo</span>
                                <% } else { %>
                                    <span class="badge badge--red">inactivo</span>
                                <% } %>
                            </td>
                            <td class="table__cell table__cell--fit">
                                <a href="/customer/<%= customer.id %>/edit" class="btn-table"><iconify-icon icon="tabler:edit"></iconify-icon></a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </section>
    </section>
</section>